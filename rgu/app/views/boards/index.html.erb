<h1>Listing boards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Event</th>
    <th>App</th>
    <th>Description</th>
    <th>Twitter</th>
    <th>Github</th>
    <th>Needs</th>
    <th>Created</th>
    <th>Last Updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boards.each do |board| %>
  <tr>
    <td><%= board.name %></td>
    <td><%= board.event %></td>
    <td><%= board.app %></td>
    <td><%= board.description %></td>
    <td><% if ! board.twitter.nil? %>
        <a href="<%= board.twitter_url %>">@<%= board.twitter %></a>
    <% end %></td>
    <td><%= board.github %></td>
    <td><%= board.needs %></td>
    <td><%= l board.created_at %></td>
    <td><%= l board.updated_at %></td>
    <td><%= link_to 'Show', board %></td>
    <td><%= link_to 'Edit', edit_board_path(board) %></td>
    <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Board', new_board_path %>
